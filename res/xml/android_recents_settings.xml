<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="android_recents_cat_clear_all_button"
        android:title="@string/android_recents_cat_clear_all_button_title">

        <SwitchPreference
            android:key="android_recents_show_clear_all"
            android:title="@string/show_title"
            android:summary="@string/android_recents_show_clear_all_summary" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
			android:key="recents_clear_all_dismiss_all"
			android:title="@string/recents_clear_all_dismiss_all_title"
			android:summary="@string/recents_clear_all_dismiss_all_summary"
			android:defaultValue="true"
			android:dependency="android_recents_show_clear_all" />
        
        <ListPreference
            android:key="android_recents_clear_all_position_horizontal"
            android:dialogTitle="@string/android_recents_clear_all_position_horizontal_title"
            android:title="@string/android_recents_clear_all_position_horizontal_title"
            android:entries="@array/android_recents_clear_all_position_horizontal_entries"
            android:entryValues="@array/android_recents_clear_all_position_values" />

        <ListPreference
            android:key="android_recents_clear_all_position_vertical"
            android:dialogTitle="@string/android_recents_clear_all_position_vertical_title"
            android:title="@string/android_recents_clear_all_position_vertical_title"
            android:entries="@array/android_recents_clear_all_position_vertical_entries"
            android:entryValues="@array/android_recents_clear_all_position_values" />

        <SwitchPreference
            android:key="android_recents_clear_all_use_icon_color"
            android:title="@string/android_recents_clear_all_use_icon_color_title"
            android:summary="@string/android_recents_clear_all_use_icon_color_summary" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="android_recents_clear_all_bg_color"
            android:title="@string/background_title"
            android:defaultValue="0xff009688" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="android_recents_clear_all_icon_color"
            android:title="@string/icon_title"
            android:defaultValue="0xffffffff" />

	</PreferenceCategory>

	<PreferenceCategory
			android:key="recents_panel"
			android:title="@string/recents_random_title">

        <!-- Recents empty Cyanide logo -->
        <SwitchPreference
            android:key="recents_empty_cyanide_logo"
            android:title="@string/recents_empty_style"
            android:summary="@string/recents_empty_style_summary"
            android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="systemui_recents_mem_display"
            android:title="@string/recents_show_membar_title"
            android:summary="@string/recents_show_membar_summary" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="mem_text_color"
            android:title="@string/membar_text_color"
            android:defaultValue="0xffffffff" />

        <PreferenceScreen
            android:key="screen_pinning_settings"
            android:title="@string/screen_pinning_title"
            android:fragment="com.android.settings.ScreenPinningSettings"
            android:defaultValue="false" />

        <!-- Shake to clear recents -->
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="shake_to_clean_recents"
            android:title="@string/shake_to_clear_recents_title"
            android:summary="@string/shake_to_clear_recents_summary"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="android_recents_show_search_bar"
            android:title="@string/android_recents_show_search_bar_title"
            android:summary="@string/android_recents_show_search_bar_summary" />

    </PreferenceCategory>
	
	<PreferenceCategory
		android:key="omniswitch"
		android:title="@string/omniswitch_recent_category">

        <!-- OmniSwitch -->
        <PreferenceScreen
			android:id="@+id/omniswitch"
			android:title="@string/omniswitch_settings_title"
			android:summary="@string/omniswitch_settings_summary"
			android:fragment="com.android.settings.cyanide.OmniSwitch" />

    </PreferenceCategory>

    <PreferenceCategory
		android:key="slim_recents"
		android:title="@string/slim_recent_category">

        <PreferenceScreen
            android:key="slim_recents_settings"
            android:title="@string/slim_recents_settings_title"
		    android:summary="@string/recents_settings_summary"
            android:fragment="com.android.settings.cyanide.SlimRecentsSettings" />

    </PreferenceCategory>
</PreferenceScreen>
