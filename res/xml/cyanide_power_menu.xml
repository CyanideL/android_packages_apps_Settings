<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <ListPreference
        android:key="advanced_reboot"
        android:title="@string/advanced_reboot_title"
        android:dialogTitle="@string/advanced_reboot_dialog_title"
        android:entries="@array/advanced_reboot_entries"
        android:entryValues="@array/advanced_reboot_values"
        android:summary="@string/advanced_reboot_summary"
        android:persistent="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="power_menu_lockscreen"
        android:title="@string/powermenu_lockscreen_title"
        android:defaultValue="true" />

    <PreferenceScreen
        android:fragment="com.android.settings.cyanide.PowerMenuStyle"
        android:key="power_menu_options"
        android:title="@string/options_title"
        android:summary="@string/power_menu_options_summary" />

    <!-- Power Menu -->
    <PreferenceScreen
        android:key="power_menu_actions"
        android:fragment="com.android.settings.cyanide.dslv.ActionListViewSettings"
        android:title="@string/power_menu_targets">
            <extra android:name="actionMode" android:value="5" />
            <extra android:name="maxAllowedActions" android:value="25" />
            <extra android:name="disableLongpress" android:value="true" />
            <extra android:name="disableDeleteLastEntry" android:value="true" />
            <extra android:name="actionValues" android:value="power_menu_action_values" />
            <extra android:name="actionEntries" android:value="power_menu_action_entries" />
            <extra android:name="fragment" android:value="com.android.settings.cyanide.fragments.PowerMenuFragment" />
    </PreferenceScreen>

</PreferenceScreen>
