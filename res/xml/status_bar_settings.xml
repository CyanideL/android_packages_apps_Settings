<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/status_bar_title">

    <!-- Status Bar Battery Options -->
	<PreferenceScreen
		android:key="status_bar_battery_status_settings"
		android:title="@string/status_bar_battery_status_settings_title"
		android:summary="@string/status_bar_battery_status_settings_summary"
		android:fragment="com.android.settings.cyanide.StatusBarBatteryStatusSettings" />

    <PreferenceScreen
		android:fragment="com.android.settings.cyanide.StatusBarClockStyle"
		android:key="clock_style_pref"
		android:title="@string/status_bar_clock" />

    <!-- Greeting -->
	<PreferenceScreen
		android:key="status_bar_greeting"
		android:title="@string/status_bar_greeting_title"
		android:summary="@string/status_bar_greeting_summary"	
		android:fragment="com.android.settings.cyanide.Greeting" />
    
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_show_empty_sims"
        android:defaultValue="true"
        android:title="@string/status_bar_show_unused_sims_title"
        android:summaryOn="@string/status_bar_show_unused_sims_title_summary_on"
        android:summaryOff="@string/status_bar_show_unused_sims_title_summary_off" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />
        
    <!-- Signal Colors -->
    <PreferenceScreen
        android:key="status_bar_signal_settings"
        android:title="@string/status_bar_signal_settings_title"
        android:summary="@string/status_bar_signal_settings_summary"
        android:fragment="com.android.settings.cyanide.StatusBarSignalSettings" />
    
    <!-- Notifications Colors -->
    <PreferenceScreen
        android:key="status_bar_notif_system_icons_settings"
        android:title="@string/status_bar_notif_system_icons_settings_title"
        android:summary="@string/status_bar_notif_system_icons_settings_summary"
        android:fragment="com.android.settings.cyanide.StatusBarNotifSystemIconsSettings" />
        
    <!-- Header Color Options -->
    <PreferenceScreen
        android:key="status_bar_expanded_header_settings"
        android:title="@string/status_bar_expanded_header_settings_title"
        android:summary="@string/header_settings_summary"
        android:fragment="com.android.settings.cyanide.StatusBarExpandedHeaderSettings" />

</PreferenceScreen>
