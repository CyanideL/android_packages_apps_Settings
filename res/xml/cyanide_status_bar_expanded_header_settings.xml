<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_expanded_header_settings_title">
    
    <PreferenceCategory
        android:key="status_bar_buttons"
        android:title="@string/status_bar_buttons">

		<SwitchPreference
			android:key="show_cyanide_button"
			android:title="@string/show_cyanide_button_title"
			android:summary="@string/show_cyanide_button_summary"
			android:defaultValue="false" />

		<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
			android:key="heads_up_show_status_button"
			android:title="@string/show_headsup_button_title"
			android:summary="@string/show_headsup_button_summary"
			android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
			android:key="status_bar_custom_header"
            android:title="@string/status_bar_custom_header_title"
            android:summary="@string/status_bar_custom_header_summary"
            android:defaultValue="false"/>

		<ListPreference
			android:key="status_bar_power_menu"
			android:title="@string/status_bar_power_menu_title"
			android:dialogTitle="@string/status_bar_power_menu_dialog_title"
			android:entries="@array/status_bar_power_menu_entries"
			android:entryValues="@array/status_bar_power_menu_values"
			android:defaultValue="0"
			android:persistent="false" />

		<SwitchPreference
			android:key="enable_task_manager"
			android:title="@string/enable_task_manager_title"
			android:summary="@string/enable_task_manager_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="expanded_header_weather_category"
        android:title="@string/header_weather_title">

		<SwitchPreference
			android:key="expanded_header_show_weather"
			android:title="@string/weather_show_weather_title"
			android:summary="@string/weather_show_weather_summary"
			android:defaultValue="false" />

		<SwitchPreference
			android:key="expanded_header_show_weather_location"
			android:title="@string/weather_show_location_title"
			android:summary="@string/weather_show_location_summary"
			android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="expanded_header_category_color"
        android:title="@string/colors_title">

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="expanded_header_background_color"
            android:title="@string/background_title"
            android:defaultValue="0xff384248" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="expanded_header_text_color"
            android:title="@string/text_title"
            android:defaultValue="0xffffffff" />

         <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="expanded_header_icon_color"
            android:title="@string/icons_title"
            android:defaultValue="0xffffffff" />

	</PreferenceCategory>

</PreferenceScreen>
